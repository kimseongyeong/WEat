<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:paddingTop="10dp"
    android:orientation="horizontal"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1.2"
            android:src="@drawable/dduck"
            android:id="@+id/board_img"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="#FFE8DE">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:textColor="#FF4C00"
                android:fontFamily="@font/gmarketsansmedium"
                android:textSize="10sp"
                android:id="@+id/board_date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsansbold"
                android:textColor="#FF4C00"
                android:maxLines="2"
                android:id="@+id/board_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/gmarketsansmedium"
                android:textSize="12dp"
                android:maxLines="3"
                android:id="@+id/board_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:fontFamily="@font/gmarketsansmedium"
                android:id="@+id/board_id"/>

        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#CCFFFFFF"
            android:id="@+id/soldout_layout">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/logo3"
                android:padding="20dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="마감되었습니다."
                    android:fontFamily="@font/gmarketsansbold"
                    android:textSize="25dp"
                    android:textColor="#FF4C00"/>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>